{% extends 'connect.html.twig' %}

{% block title %}{{'Demander une demonstration'|trans}} : {{'Prise de rendez-vous et dépôt de dossier en ligne'|trans}} {% endblock %}

{% block style %}
 <style>
       .sky-form{
           box-shadow: none !important;
           border:1px solid #fff !important;
       }
            #wrapper > button{
         display: block;
         margin-left: 170px !important;
       }

           body{
     background: url('{{asset("img/t8.png")}}') no-repeat center center;
     background-size: cover !important;
     background-attachment: fixed !important;
   }
   </style>


{% endblock %}

{% block body %}
       <div class="container-fluid">
         <div class="down_containt"></div>
           <div class="container">
                <div id="wrapper">

                      <div class="wrapper_prise_">
                       <div class="">
