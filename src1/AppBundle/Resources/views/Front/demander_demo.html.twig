                           <p class="with_par center_">{{'Par mail'|trans}}: <b><a href="mailto:contact@dikaki-rdv.com" class="form_contact" title="Nous contacter par mail." style="color:#000;">Contact@dikaki-rdv.com</a></b></p>

                       </div>
                          <div class="row">
                           <!-- debut -->
   <form action="" class="sky-form" method="post" id="signupForm">

       <fieldset>
         <div class="row">
           <section class="col col-6">
             <label class="input">
               <i class="icon-append icon-user"></i>
               <input type="text" placeholder="{{'Nom'|trans}}" name="firstname">
             </label>

           </section>
           <section class="col col-6">
             <label class="input">
               <i class="icon-append icon-user"></i>
               <input type="text" placeholder="{{'Prénom'|trans}}" name="lastname">
