               <i class="icon-append icon-phone"></i>
               <input type="text" placeholder="{{'Téléphone portable'|trans}}" name="phone" maxlength="9">
             </label>

           </section>
           <section class="col col-6">
             <label class="input">
               <i class="icon-append icon-envelope-alt"></i>
               <input type="email" placeholder=" {{'E-mail'|trans}}" name="email">
             </label>

           </section>
         </div>

         <div class="row">
           <section class="col col-6">
             <label class="input">
               <i class="icon-append icon-home"></i>
               <input type="text" placeholder="{{'Entreprise'|trans}}" name="entreprise">
             </label>

           </section>
           <section class="col col-6">
             <label class="select">
               <select name="secteur">
                 <option value=""> {{"Secteur d'activité"|trans}}</option>
                 <option value="Santé">{{'Santé'|trans}}</option>
                 <option value="Bien être et beauté">{{'Bien être et beauté'|trans}}</option>
                 <option value="Restauration">{{'Restauration'|trans}}</option>
                 <option value="Avocat-Notaire">{{'Avocat-Notaire'|trans}}</option>
                 <option value="Expert-Immobilier">{{'Expert-Immobilier'|trans}}</option>
                 <option value="Institutions publiques">{{'Institutions publiques'|trans}}</option>
                 <option value="collectivités territoriales décentralisées">{{'collectivités territoriales décentralisées'|trans}}</option>
                 <option value="Automobile">{{'Automobile'|trans}}</option>
                 <option value="Evénementiel">{{'Evénementiel'|trans}}</option>
                 <option value="Administration">{{'Administration'|trans}}</option>
                 <option value="profession libérale">{{'profession libérale'|trans}}</option>
                 <option value="Banque">{{'Banque'|trans}}</option>
                 <option value="Assurances">{{'Assurances'|trans}}</option>
                 <option value="Sécurité sociale">{{'Sécurité sociale'|trans}}</option>
                 <option value="Education">{{'Education'|trans}}</option>
                 <option value="Universités et grandes écoles">{{'Universités et grandes écoles'|trans}}</option>
                 <option value="Transport">{{'Transport'|trans}}</option>
                 <option value="Representation Diplomatique">{{'Representation Diplomatique'|trans}}</option>
                 <option value="Organisme International">{{'Organisme International'|trans}}</option>
                 <option value="Consulat">{{'Consulat'|trans}}</option>
                 <option value="Sport et Loisirs">{{'Sport et Loisirs'|trans}}</option>
                 <option value="Art et culture">{{'Art et culture'|trans}}</option>
               </select>
               <i></i>
             </label>


             </div>
           </section>
         </div>

        <div class="pull-right" style="margin-right:18px">
            <button type="submit" id="button_send" class="btn-two green small small_btn" style="display:inline-block;margin-left:20px !important;"><i class="fa fa-paper-plane"></i> {{'Envoyer'|trans}}</button>


       </fieldset>

               </form>
  <a href="{{ path('dkk_app_homepage') }}" class="btn-two green small small_btn pull-left"><i class="fa fa-times"></i>{{'Retour'|trans}}</a>
        </div>
        <p style="clear: both !important;"></p>
       </div>
                     </div>
           </div>



   </div>
 </div>

{% endblock %}

