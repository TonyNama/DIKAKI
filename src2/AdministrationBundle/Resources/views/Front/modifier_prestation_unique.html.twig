{% block scripts %}

<script>
        $(document).ready(function(){
             $("#choix1").on('click',function(){
                $(".choix1").show();
                $(".choix2").hide();
              });
              $("#choix2").on('click',function(){
                $(".choix2").show();
                $(".choix1").hide();
              });

            $("#chkPassport").on("click",function(){
                $("#dvPassport").toggle();
            });

            // ajouter uen description
            
            $('#ajout_desscription').on('click',function(){
                $('#show_description').toggle();
            });
            // une autre ligne
            $("#signupForm").validate({
              rules: {
                couleur: "required",
                titre: {
                  required: true,
                  minlength: 2
                },
                type: {
                  required: true,
                  minlength: 4
                },
                prix: {
                  required: true,
                  number: true,
                  minlength: 4

                },
                duree: {
                  required: true
                }
              },
              messages: {
                titre: {
                  required: "<span style='color:#dd4f43'>Le titre</span>",
                  minlength: "<span style='color:#dd4f43'> 2 {{'caractères minimum'|trans}}</span>"
                },
                type: {
                  required: "<span style='color:#dd4f43'>{{"Le type"|trans}}</span>",
                  minlength: "<span style='color:#dd4f43'>2 {{'caractères minimum'|trans}}</span>"
                },

                prix: {
                  required: "<span style='color:#dd4f43'>{{'Le prix'|trans}}</span>",
                  minlength: "<span style='color:#dd4f43'>4 {{'caractères minimum'|trans}}</span>",
                  number:"<span style='color:#dd4f43'>{{'Prix invalide'|trans}}</span>"
                },
                duree: {
                  required: "<span style='color:#dd4f43'>{{'La durée'|trans}}</span>",
                  minlength: "<span style='color:#dd4f43'>4 {{'caractères minimum'|trans}}</span>",
                  number:"<span style='color:#dd4f43'>Numéro invalide</span>"
                },



                couleur: "<span style='color:#dd4f43'>{{'La couleur'|trans}}</span>",
              }
            });
        });
    </script>


