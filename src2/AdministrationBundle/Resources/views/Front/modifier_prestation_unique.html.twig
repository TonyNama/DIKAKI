              });

            $("#chkPassport").on("click",function(){
                $("#dvPassport").toggle();
            });

            // ajouter uen description
            
            $('#ajout_desscription').on('click',function(){
                $('#show_description').toggle();
            });
            // une autre ligne
            $("#signupForm").validate({
              rules: {
                couleur: "required",
                titre: {
                  required: true,
                  minlength: 2
                },
                type: {
                  required: true,
                  minlength: 4
                },
                prix: {
                  required: true,
                  number: true,
                  minlength: 4

                },
                duree: {
                  required: true
                }
              },
              messages: {
                titre: {
                  required: "<span style='color:#dd4f43'>Le titre</span>",
                  minlength: "<span style='color:#dd4f43'> 2 caractères minimum</span>"
                },
                type: {
                  required: "<span style='color:#dd4f43'>Le type</span>",
                  minlength: "<span style='color:#dd4f43'>2 caractères minimum</span>"
                },

                prix: {
                  required: "<span style='color:#dd4f43'>Le prix</span>",
                  minlength: "<span style='color:#dd4f43'>4 caractères minimum</span>",
                  number:"<span style='color:#dd4f43'>Prix invalide</span>"
                },
                duree: {
                  required: "<span style='color:#dd4f43'>La durée</span>",
                  minlength: "<span style='color:#dd4f43'>4 caractères minimum</span>",
                  number:"<span style='color:#dd4f43'>Numéro invalide</span>"
                },



