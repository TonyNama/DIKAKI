                  required:false,
                  minlength: 4
                },
                type: {
                  required: true,
                  minlength: 4
                },
                prix: {
                  required: true,
                  number: true,
                  minlength: 4
                },
                duree: {
                  required: true
                }
              },
              messages: {
                type: {
                  required: "<span style='color:#dd4f43'>Le type</span>",
                  minlength: "<span style='color:#dd4f43'>4 caractères minimum</span>"
                },

