                              <br>
                              <button type="submit" class="btn btn-success btn_valid" id="button_send"><i class="fa fa-floppy-o"></i> {{'Enregistrer'|trans}}</button>
                              <button class="btn btn-danger btn_valid"><i class="fa fa-times"></i> {{'Annuler'|trans}} </button>
                            </td>
                        </tr>

                    </table>
                  </form>

                    <div style="margin-left:10px !important;margin-right:10px !important;">
                      <br>
                      <table class="table table-bordered table-striped table-condensed">
                  <thead>
                              <tr style="background-color: #26440d !important;color: #fff !important;">
                               <th> N°</th>
                                <th>{{'Titre'|trans}}</th>

                                <th>{{'Nom établissement'|trans}}</th>
                                <th>{{'Activer'|trans}}</th>
                                <th>{{'Action'|trans}}</th>
                              </tr>
                            </thead>
                            <tbody>
                              <tr>

                                  <td>.......</td>
                                  <td>.......</td>
                                  <td>.......</td>
                                  <td>.......</td>
                                  <td>
