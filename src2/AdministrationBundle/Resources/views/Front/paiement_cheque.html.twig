                                                          </select>

                                                        </td>
                                                    </tr>

                                                      <tr>
                                                       <th></th>
                                                         <td style="text-align: left !important;">
                                                           <span class="name_operat"><input type="checkbox" name="" class=""> {{'Activer'|trans}}</span>
                                                         </td>
                                                     </tr>

                                                     <tr>
                                                       <th><span class="title_mode">{{'Coordonnées'|trans}} </span> </th>
                                                         <td>
                                                           <span class="name_operat"><textarea placeholder="{{'Coordonnées'|trans}}" name="coordonnee_modif" class="form-control"></textarea> </span>
                                                         </td>
                                                     </tr>
                                                     <tr>
                                                       <th><span class="title_mode">{{'Ordre'|trans}} </span></th>
                                                         <td>
                                                           <span class="name_operat"><input type="text" name="ordre_modif" placeholder=" " class="form-control"></span>
                                                         </td>
                                                     </tr>

                                                     <tr>
                                                       <th></th>
                                                         <td style="padding-left: 20px;">
                                                           <br>
                                                           <button type="submit" class="btn btn-success btn_valid" id="button_send"><i class="fa fa-floppy-o"></i> {{'Enregistrer'|trans}}</button>
                                                           <button class="btn btn-danger btn_valid"><i class="fa fa-times"></i> {{'Annuler'|trans}} </button>
                                                         </td>
                                                     </tr>

                                                 </table>
                                                </form>

                                            <br><br>

                                            <!-- fin  -->
                                          </div>
                                        </div>
                                      </div>
                                      </div>

                                    <!-- fin de la fenetre modal -->
                                      <a href="" class="btn btn-danger btn_valid" onclick="return confirm('Voulez-vous vraiment supprimer ?')"><i class="fa fa-window-close" aria-hidden="true"></i> {{'Supprimer'|trans}}</a>
                                  </td>
                              </tr>
                            </tbody>
             </table>

           </div>
                </div>

            </div>
                  </div>
                        </div>
                      </div>
              <!-- fin de la popup pour la modification des parametres qpécifique -->



              </section>
          </div>




          <!-- end col-4 -->
        </div>
        <!--  /col-lg-12 -->
      </div>
      <!--  /row -->
    </section>
           <!-- fin -->

          </div>

        </div>
        <!-- /row -->
      </div>
      <!-- /container -->
    </section>
    <!-- /wrapper -->
  </section>

{% endblock %}

{% block scripts %}

<script>
      $(document).ready(function() {
        $("#signupForm").validate({
          rules: {
            titre: {
              required: true,
              minlength: 2
            },
            etablissement: {
              required: true,
              minlength: 2
            },
            ordre: {
              required: true,
              minlength: 2
            },
            comment:{
              required:false,
              minlength: 20
            },
            coordonnee: {
           required: true,
           minlength: 2
         },
          },
          messages: {
            etablissement: {
              required: "<span style='color:#dd4f43'>{{'Nom réquis'|trans}}</span>",
              minlength: "<span style='color:#dd4f43'> 2 {{'caractères minimum'|trans}}</span>"
            },
            phone: {
           required: "<span style='color:#dd4f43'>{{'Champs réquis'|trans}}</span>",
           minlength: "<span style='color:#dd4f43'>9 {{'caractères minimum'|trans}}</span>",
           maxlength: "<span style='color:#dd4f43'>{{'Pas plus de 9 caractères'|trans}}</span>",
           number:"<span style='color:#dd4f43'>{{'Numéro invalide'|trans}}</span>"
         },
            titre: {
              required: "<span style='color:#dd4f43'>{{'Titre réquis'|trans}}</span>",
              minlength: "<span style='color:#dd4f43'> 2 {{'caractères minimum'|trans}}</span>"
            },
            ordre: {
              required: "<span style='color:#dd4f43'>{{'Champ réquis'|trans}}</span>",
              minlength: "<span style='color:#dd4f43'> 2 {{'caractères minimum'|trans}}</span>"
            },
            coordonnee: {
              required: "<span style='color:#dd4f43'>{{'Coordonnées réquis'|trans}}</span>",
              minlength: "<span style='color:#dd4f43'> 2 {{'caractères minimum'|trans}}</span>"
            },
            comment: {
              required: "<span style='color:#dd4f43'></span>",
              minlength: "<span style='color:#dd4f43'>20 {{'caractères minimum'|trans}}</span>",
            },
            ressource: "<span style='color:#dd4f43'>{{'Ressource'|trans}}</span>",
          }
        });


      });

  </script>

{% endblock %}
