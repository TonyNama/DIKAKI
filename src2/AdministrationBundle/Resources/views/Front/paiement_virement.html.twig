{% block scripts %}

 <script>
      $(document).ready(function() {
        $("#signupForm").validate({
          rules: {
            ressource:"required",
            titre: {
              required: true,
              minlength: 2
            },
            libelle: {
              required: true,
              minlength: 2
            },
            compte_iban: {
              required: true,
              minlength: 2
            },
            titulaire: {
              required: true,
              minlength: 2
            },
            compte: {
              required: true,
              minlength: 2
            },
            comment:{
              required:false,
              minlength: 20
            }

          },
          messages: {
            titulaire: {
              required: "<span style='color:#dd4f43'>Titulaire du compte</span>",
              minlength: "<span style='color:#dd4f43'> 2 caractères minimum</span>"
            },
            compte: {
           required: "<span style='color:#dd4f43'>Champs réquis</span>",
           minlength: "<span style='color:#dd4f43'>2 caractères minimum</span>"
         },
         compte_iban: {
            required: "<span style='color:#dd4f43'>Champs réquis</span>",
            minlength: "<span style='color:#dd4f43'>2 caractères minimum</span>"
          },
          libelle: {
             required: "<span style='color:#dd4f43'>Champs réquis</span>",
             minlength: "<span style='color:#dd4f43'>2 caractères minimum</span>"
           },
            titre: {
              required: "<span style='color:#dd4f43'>Titre réquis</span>",
              minlength: "<span style='color:#dd4f43'> 2 caractères minimum</span>"
            },
            comment: {
              required: "<span style='color:#dd4f43'></span>",
              minlength: "<span style='color:#dd4f43'>20 caractères minimum</span>",
            },
            ressource: "<span style='color:#dd4f43'>Ressource</span>",
          }
        });

      });

    </script>
    
