          $("#ht_description").click(function () {
                  if ($(this).is(":checked")) {
                    $("#tva").hide();
                    $("#TTC").hide();
                    $("#ht").show();
                  } else {
                    $("#tva").show();
                    $("#TTC").show();
                    $("#ht").hide();
