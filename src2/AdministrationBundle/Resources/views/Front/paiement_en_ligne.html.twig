      th,td{
        text-align: center !important;
      }
      </style>
{% endblock %}

{% block body %}


<!-- debut du contenu -->
    <section id="main-content">
      <section class="wrapper site-min-height">
        <div class="row mt">
             <h2 class="name_structure">Cabinet médical la Grâce</h2>
          <!-- /col-lg-12 -->
          <div class="col-lg-12 mt">


            <div class="row content-panel">
             <!-- debut -->
        <section class="wrapper site-min-height">
        <div class="row">
          <div class="col-lg-12">



              <h4 class="small_tittle up_">Mode de paiement </h4>
                   <p class="journne_du_" style="text-align:center !important;"> </p>



            <div class="">

                <section id="unseen">
                  <div class="cadre_operateur">
                    <p class="text_paiement">Paiement par monnaie mobile (mobile money)</p>
                    <form method="post" action="" id="signupForm">
                      <table style="margin-left:20px !important;margin-right:20px !important;">
                          <tr>
                            <th><span class="title_mode">Titre  </span></th>
                              <td>
                                <span class="name_operat"><input type="text" name="titre" class="form-control" placeholder="Mobile money" class="form-control"></span>

                              </td>
                          </tr>
                          <tr>
                            <th><span class="title_mode">Nom opérateur  </span></th>
                              <td>
                                <span class="name_operat"><input type="text" name="nom" placeholder="Ex: Mtn ou Orange" class="form-control"></span>

                              </td>
                          </tr>

                          <tr>
                            <th><span class="title_mode">Description </span> </th>
                              <td>
                                <span class="name_operat"><textarea class="form-control" name="comment"></textarea> </span>

                              </td>
                          </tr>
                          <tr>
                            <th></th>
                              <td style="text-align: left !important">
                                <span class="name_operat"><input type="checkbox" name="" class=""> Activer</span>
                              </td>
                          </tr>
                          <tr>
                            <th><span class="title_mode">Identifiant (Numéro téléphone) </span></th>
                              <td>
                                <span class="name_operat"><input type="text" name="phone" maxlength="9" placeholder="" class="form-control"></span>
                                <br>

                              </td>
                          </tr>

                          <tr>
                            <th></th>
                              <td style="padding-left: 20px !important">

                                <button type="submit" class="btn btn-success btn_valid" id="button_send"><i class="fa fa-floppy-o"></i> Enregistre</button>
                                <button class="btn btn-danger btn_valid"><i class="fa fa-times"></i> Annuler </button>
                              </td>
                          </tr>

                      </table>
                    </form>
                      <br><br>
                      <div style="margin-left:10px !important;margin-right:10px !important;">
                           <table  class="table table-bordered table-striped table-condensed">
                    <thead>
                                <tr style="background-color: #26440d !important;color: #fff !important;">
                                 <th> N°</th>
                                  <th>Titre</th>
                                  <th>Nom opérateur</th>
                                  <th>Identifiant</th>
                                  <th>Activer</th>
                                  <th>Action</th>
                                </tr>
                              </thead>
                              <tbody>
                                <tr>

                                    <td>.......</td>
                                    <td>.......</td>
                                    <td>.......</td>
                                    <td>.......</td>
                                    <td>.......</td>
                                    <td>
                                        <button class="btn btn-primary btn_valid" data-toggle="modal" data-target="#myModal_rdv"><i class="fa fa-pencil-square-o"></i> Modifier</button>

                                        <!-- debut de la fenetre modal -->

                                          <div class="modal fade" id="myModal_rdv" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                                          <div class="modal-dialog second_modal-dialog" role="document" >
                                            <div class="modal-content" >
                                              <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
